option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: django_app/photodiary/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: photodiary.settings
    PYTHONPATH: /opt/python/current/app/django_app:$PYTHONPATH
    LANG: "ko_KR.utf8"
    LC_ALL: "ko_KR.UTF-8"
    LC_LANG: "ko_KR.UTF-8"

  aws:elasticbeanstalk:container:python:staticfiles:
    "/static/": "static_root/"

container_commands:
  01_WSGIPassAuthorization:
    command: sed -i.bak '/WSGIScriptAlias/ a WSGIPassAuthorization On' config.py
    cwd: /opt/elasticbeanstalk/hooks
  02_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python django_app/manage.py collectstatic --noinput"
  03_migrate:
    command: "source /opt/python/run/venv/bin/activate && python django_app/manage.py migrate --noinput"
  04_createsu:
    command: "source /opt/python/run/venv/bin/activate && python django_app/manage.py createsu"
    leader_only: true